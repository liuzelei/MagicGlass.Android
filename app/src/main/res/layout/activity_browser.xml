<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/activityRoot"
    tools:context=".BrowserActivity" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/web_url_input1"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:hint="请输入网址"
                android:inputType="textUri"
                />
            <Button
                android:id="@+id/btn_url_goto1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进入"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/web_url_input2"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:hint="请输入网址"
                android:inputType="textUri"
                />
            <Button
                android:id="@+id/btn_url_goto2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进入"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >




        <view
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            class="com.hongjing.magicglasses.ObservableScrollView"
            android:id="@+id/scrollView1"
            android:layout_weight="1"
            android:fillViewport="false">

            <WebView
                android:id="@+id/browser_webView1"
                android:layout_margin="2dip"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:layout_weight="1"/>

        </view>

        <view
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            class="com.hongjing.magicglasses.ObservableScrollView"
            android:id="@+id/scrollView2"
            android:layout_weight="1" >

            <WebView
                android:id="@+id/browser_webView2"
                android:layout_margin="2dip"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:visibility="visible"
                android:layout_weight="1"/>

        </view>



        <!--<WebView-->
            <!--android:id="@+id/browser_webView2"-->
            <!--android:layout_margin="2dip"-->
            <!--android:gravity="center_horizontal"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="fill_parent"-->
            <!--android:layout_weight="1"/>-->

    </LinearLayout>



</LinearLayout>
